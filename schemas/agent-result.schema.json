{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bass-agents/schemas/agent-result.schema.json",
  "title": "AgentResult",
  "description": "Universal output contract for all bass-agents. Every agent must produce an AgentResult.",
  "type": "object",
  "required": ["task_id", "status", "summary", "findings"],
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Must match the task_id from the corresponding AgentTask.",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["pending", "success", "partial", "blocked"],
      "description": "Overall outcome of the task. Use 'pending' for skeleton results that have not been executed yet."
    },
    "summary": {
      "type": "string",
      "description": "1-3 sentence summary of what was accomplished.",
      "minLength": 1
    },
    "findings": {
      "type": "array",
      "description": "Structured observations, decisions, and issues discovered during the task.",
      "items": {
        "type": "object",
        "required": ["id", "title", "severity", "confidence", "evidence", "details", "recommendation", "recommended_next_actor"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^F-\\d{3}$",
            "description": "Finding identifier in the format F-001, F-002, etc."
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "severity": {
            "type": "string",
            "enum": ["blocker", "major", "minor", "info"]
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence score from 0.0 (no confidence) to 1.0 (certain)."
          },
          "evidence": {
            "type": "string",
            "enum": ["artifact", "code", "log", "screenshot", "assumption"],
            "description": "Type of evidence supporting this finding."
          },
          "details": {
            "type": "string"
          },
          "repro_steps": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Optional reproduction steps."
          },
          "recommendation": {
            "type": "string"
          },
          "recommended_next_actor": {
            "type": "string",
            "description": "Which agent or role should act on this finding next."
          }
        },
        "additionalProperties": false
      }
    },
    "next_actions": {
      "type": "array",
      "description": "Prioritized list of follow-up actions for the pipeline.",
      "items": {
        "type": "object",
        "required": ["priority", "action", "owner"],
        "properties": {
          "priority": {
            "type": "integer",
            "minimum": 1
          },
          "action": {
            "type": "string"
          },
          "owner": {
            "type": "string",
            "description": "Agent name that should handle this action."
          },
          "expected_artifacts": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "artifacts_produced": {
      "type": "array",
      "description": "List of artifacts generated during this task.",
      "items": {
        "type": "object",
        "required": ["type", "path_or_ref"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["doc", "diff", "test", "report", "schema"]
          },
          "path_or_ref": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "memory_updates": {
      "type": "array",
      "description": "Memory update operations to be applied after this task completes.",
      "items": {
        "type": "object",
        "required": ["operation", "entry"],
        "properties": {
          "operation": {
            "type": "string",
            "enum": ["create", "supersede", "deprecate"],
            "description": "Type of memory update operation."
          },
          "entry": {
            "type": "object",
            "required": ["content", "confidence", "evidence"],
            "properties": {
              "section": {
                "type": "string",
                "enum": ["decisions", "state", "observations", "learnings"],
                "description": "Required for create operation."
              },
              "kind": {
                "type": "string",
                "enum": ["decision", "requirement", "invariant", "incident", "metric", "hypothesis", "runbook_step", "other"],
                "description": "Required for create operation."
              },
              "subject": {
                "type": "string",
                "description": "Required for create operation. Canonical entity key."
              },
              "scope": {
                "type": "string",
                "pattern": "^(repo|service:[^:]+|org|customer|environment:(prod|staging))$",
                "description": "Required for create operation."
              },
              "summary": {
                "type": "string",
                "maxLength": 300,
                "description": "Required for create operation."
              },
              "content": {
                "type": "string",
                "maxLength": 2000,
                "description": "Required for all operations."
              },
              "tags": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Optional flexible categorization tags."
              },
              "confidence": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 1.0,
                "description": "Required confidence score."
              },
              "evidence": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["type", "uri", "note"],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["artifact", "code", "log", "screenshot", "assumption", "ticket", "doc"]
                    },
                    "uri": {
                      "type": "string"
                    },
                    "note": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                },
                "description": "Required evidence array."
              },
              "status": {
                "type": "string",
                "enum": ["active", "superseded", "deprecated", "draft"],
                "description": "Optional, defaults to active for create."
              },
              "valid_from": {
                "type": ["string", "null"],
                "format": "date-time",
                "description": "Optional ISO 8601 timestamp."
              },
              "valid_to": {
                "type": ["string", "null"],
                "format": "date-time",
                "description": "Optional ISO 8601 timestamp."
              },
              "related_entries": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Optional Memory IDs of related entries."
              }
            },
            "additionalProperties": false
          },
          "target_id": {
            "type": "string",
            "description": "Required for supersede/deprecate operations. Memory ID to update."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
