{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bass-agents/schemas/agent-task.schema.json",
  "title": "AgentTask",
  "description": "Universal input contract for all bass-agents. Every agent receives an AgentTask as its sole input.",
  "type": "object",
  "required": ["task_id", "project", "goal", "definition_of_done"],
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Unique identifier for this task (UUID or timestamp-based).",
      "minLength": 1
    },
    "project": {
      "type": "object",
      "description": "Project metadata and constraints.",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "repo_root": {
          "type": "string",
          "description": "Absolute path to the project repository root."
        },
        "runtime": {
          "type": "string",
          "enum": ["node", "python", "go", "unity", "other"],
          "description": "Primary runtime/language. Use 'other' for unlisted runtimes."
        },
        "constraints": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Project-level constraints (e.g. 'web-first', 'no paid assets')."
        }
      },
      "additionalProperties": false
    },
    "goal": {
      "type": "string",
      "description": "Plain-language description of what the agent should accomplish.",
      "minLength": 1
    },
    "context": {
      "type": "object",
      "description": "Optional background information, known issues, and supporting artifacts.",
      "properties": {
        "user_notes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "known_issues": {
          "type": "array",
          "items": { "type": "string" }
        },
        "artifacts": {
          "type": "object",
          "properties": {
            "screenshots": {
              "type": "array",
              "items": { "type": "string" }
            },
            "logs": {
              "type": "array",
              "items": { "type": "string" }
            },
            "test_results": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "definition_of_done": {
      "type": "array",
      "description": "Measurable criteria that must all be satisfied for the task to pass.",
      "items": { "type": "string" },
      "minItems": 1
    },
    "limits": {
      "type": "object",
      "description": "Resource and scope constraints for this task.",
      "properties": {
        "timebox_minutes": {
          "type": "integer",
          "minimum": 1
        },
        "max_iterations": {
          "type": "integer",
          "minimum": 1
        },
        "max_code_diff_lines": {
          "type": "integer",
          "minimum": 1,
          "default": 300
        }
      },
      "additionalProperties": false
    },
    "memory_enabled": {
      "type": "boolean",
      "description": "Whether to populate memory context for this task. Defaults to false.",
      "default": false
    },
    "memory_context": {
      "type": "array",
      "description": "Relevant memory entries for this task (max 10 entries). Populated when memory_enabled is true.",
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": ["id", "section", "kind", "subject", "scope", "summary", "content", "confidence", "evidence", "status", "created_by", "created_at", "updated_at"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this memory entry."
          },
          "section": {
            "type": "string",
            "enum": ["decisions", "state", "observations", "learnings"],
            "description": "Logical grouping of memory entries."
          },
          "kind": {
            "type": "string",
            "enum": ["decision", "requirement", "invariant", "incident", "metric", "hypothesis", "runbook_step", "other"],
            "description": "Type classification for memory entries."
          },
          "subject": {
            "type": "string",
            "description": "Canonical entity key identifying what the memory is about."
          },
          "scope": {
            "type": "string",
            "pattern": "^(repo|service:[^:]+|org|customer|environment:(prod|staging))$",
            "description": "Context boundary for this memory entry."
          },
          "summary": {
            "type": "string",
            "maxLength": 300,
            "description": "1-2 sentence distilled version."
          },
          "content": {
            "type": "string",
            "maxLength": 2000,
            "description": "Full content of the memory entry."
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Flexible categorization tags."
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence score for this memory entry."
          },
          "evidence": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["type", "uri", "note"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["artifact", "code", "log", "screenshot", "assumption", "ticket", "doc"],
                  "description": "Type of evidence supporting this memory."
                },
                "uri": {
                  "type": "string",
                  "description": "URI to the evidence (git permalink, file path, URL)."
                },
                "note": {
                  "type": "string",
                  "description": "Contextual explanation of the evidence."
                }
              },
              "additionalProperties": false
            },
            "description": "Supporting evidence for this memory entry."
          },
          "status": {
            "type": "string",
            "enum": ["active", "superseded", "deprecated", "draft"],
            "description": "Lifecycle state of the memory entry."
          },
          "superseded_by": {
            "type": ["string", "null"],
            "description": "Memory ID of replacement entry if this entry is superseded."
          },
          "related_entries": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Memory IDs of related entries."
          },
          "valid_from": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "ISO 8601 timestamp when entry becomes valid."
          },
          "valid_to": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "ISO 8601 timestamp when entry expires."
          },
          "created_by": {
            "type": "string",
            "description": "Agent identifier that created this entry."
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of creation."
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of last modification."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
