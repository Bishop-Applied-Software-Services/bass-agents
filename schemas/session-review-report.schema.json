{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bass-agents/schemas/session-review-report.schema.json",
  "title": "SessionReviewReport",
  "description": "MVP output contract for cross-tool session token/cost analysis.",
  "type": "object",
  "required": [
    "report_id",
    "generated_at",
    "source",
    "sessions_analyzed",
    "summary",
    "scores",
    "top_token_drivers",
    "recommendations"
  ],
  "properties": {
    "report_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "enum": ["codex", "claude", "mixed"]
    },
    "sessions_analyzed": {
      "type": "integer",
      "minimum": 1
    },
    "summary": {
      "type": "object",
      "required": [
        "input_tokens",
        "output_tokens",
        "total_tokens",
        "messages",
        "tool_calls"
      ],
      "properties": {
        "input_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "output_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "estimated_cost_usd": {
          "type": "number",
          "minimum": 0
        },
        "messages": {
          "type": "integer",
          "minimum": 0
        },
        "avg_tokens_per_message": {
          "type": "number",
          "minimum": 0
        },
        "tool_calls": {
          "type": "integer",
          "minimum": 0
        },
        "retry_loops": {
          "type": "integer",
          "minimum": 0
        },
        "repeated_context_ratio": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "scores": {
      "type": "object",
      "required": ["efficiency", "reliability", "composite", "score_method"],
      "properties": {
        "efficiency": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "reliability": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "quality_estimate": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "composite": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "confidence": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "score_method": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "budget": {
      "type": "object",
      "required": ["constraints", "usage", "adherence"],
      "properties": {
        "constraints": {
          "type": "object",
          "properties": {
            "max_tokens": {
              "type": "integer",
              "minimum": 1
            },
            "max_cost_usd": {
              "type": "number",
              "minimum": 0
            },
            "timebox_minutes": {
              "type": "number",
              "minimum": 0
            }
          },
          "additionalProperties": false
        },
        "usage": {
          "type": "object",
          "required": ["total_tokens"],
          "properties": {
            "total_tokens": {
              "type": "integer",
              "minimum": 0
            },
            "estimated_cost_usd": {
              "type": "number",
              "minimum": 0
            },
            "elapsed_minutes": {
              "type": "number",
              "minimum": 0
            }
          },
          "additionalProperties": false
        },
        "adherence": {
          "type": "object",
          "required": ["warnings"],
          "properties": {
            "tokens_percent_of_budget": {
              "type": "number",
              "minimum": 0
            },
            "tokens_over_budget": {
              "type": "integer",
              "minimum": 0
            },
            "cost_percent_of_budget": {
              "type": "number",
              "minimum": 0
            },
            "cost_over_budget_usd": {
              "type": "number",
              "minimum": 0
            },
            "time_percent_of_budget": {
              "type": "number",
              "minimum": 0
            },
            "minutes_over_budget": {
              "type": "number",
              "minimum": 0
            },
            "warnings": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "top_token_drivers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["rank", "driver", "estimated_token_impact", "details"],
        "properties": {
          "rank": {
            "type": "integer",
            "minimum": 1
          },
          "driver": {
            "type": "string",
            "minLength": 1
          },
          "estimated_token_impact": {
            "type": "integer",
            "minimum": 0
          },
          "details": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    },
    "recommendations": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": ["id", "action", "expected_impact"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^R-\\d{3}$"
          },
          "action": {
            "type": "string",
            "minLength": 1
          },
          "expected_impact": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "rationale": {
            "type": "string"
          },
          "doc_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
